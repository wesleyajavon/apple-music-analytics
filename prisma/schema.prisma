// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listens       Listen[]
  replayYearly  ReplayYearly[]
}

model Artist {
  id        String   @id @default(cuid())
  name      String   @unique
  nameLower String   @unique // Lowercase version for case-insensitive searches
  mbid      String?  @unique // MusicBrainz ID
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tracks              Track[]
  replayTopArtists    ReplayTopArtist[]

  @@index([nameLower])
  @@index([mbid])
}

model Track {
  id        String   @id @default(cuid())
  title     String
  titleLower String  // Lowercase version for case-insensitive searches
  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  mbid      String?  @unique // MusicBrainz ID
  duration  Int?     // Duration in seconds
  genre     String?  // Genre musical (from Last.fm API)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listens          Listen[]
  replayTopTracks  ReplayTopTrack[]

  @@unique([title, artistId], name: "unique_title_artist")
  @@index([artistId])
  @@index([titleLower])
  @@index([mbid])
  @@index([genre])
}

model Listen {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trackId   String
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  playedAt  DateTime // Timestamp of when the track was played
  source    String   @default("lastfm") // 'lastfm' or 'apple_music_replay'
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([trackId])
  @@index([playedAt])
  @@index([userId, playedAt])
}

model ReplayYearly {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  year            Int      // Year (e.g., 2024)
  totalPlayTime   Int      // Total play time in seconds
  totalPlays      Int      // Total number of plays
  importedAt      DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  topArtists  ReplayTopArtist[]
  topTracks   ReplayTopTrack[]
  topAlbums   ReplayTopAlbum[]

  @@unique([userId, year])
  @@index([userId])
  @@index([year])
}

model ReplayTopArtist {
  id            String        @id @default(cuid())
  replayYearlyId String
  replayYearly  ReplayYearly  @relation(fields: [replayYearlyId], references: [id], onDelete: Cascade)
  artistId      String
  artist        Artist        @relation(fields: [artistId], references: [id], onDelete: Cascade)
  rank          Int           // Position in top list (1, 2, 3, ...)
  playCount     Int           // Number of plays for this artist
  createdAt     DateTime      @default(now())

  @@unique([replayYearlyId, rank])
  @@index([replayYearlyId])
  @@index([artistId])
}

model ReplayTopTrack {
  id            String        @id @default(cuid())
  replayYearlyId String
  replayYearly  ReplayYearly  @relation(fields: [replayYearlyId], references: [id], onDelete: Cascade)
  trackId       String
  track         Track         @relation(fields: [trackId], references: [id], onDelete: Cascade)
  rank          Int           // Position in top list (1, 2, 3, ...)
  playCount     Int           // Number of plays for this track
  createdAt     DateTime      @default(now())

  @@unique([replayYearlyId, rank])
  @@index([replayYearlyId])
  @@index([trackId])
}

model ReplayTopAlbum {
  id            String        @id @default(cuid())
  replayYearlyId String
  replayYearly  ReplayYearly  @relation(fields: [replayYearlyId], references: [id], onDelete: Cascade)
  albumName     String        // Album name (no separate Album model for now)
  artistName    String        // Artist name for the album
  rank          Int           // Position in top list (1, 2, 3, ...)
  playCount     Int           // Number of plays for this album
  createdAt     DateTime      @default(now())

  @@unique([replayYearlyId, rank])
  @@index([replayYearlyId])
}
